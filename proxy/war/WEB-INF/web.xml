<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
version="2.5"
xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->

  <servlet>
    <servlet-name>trackingServlet</servlet-name>
    <servlet-class>dk.itu.info.proxy.server.TrackingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>trackingServlet</servlet-name>
    <url-pattern>/entering</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>trackingServlet</servlet-name>
    <url-pattern>/leaving</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>trackingServlet</servlet-name>
    <url-pattern>/getallclients</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>trackingServlet</servlet-name>
    <url-pattern>/ping</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>trackingServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
